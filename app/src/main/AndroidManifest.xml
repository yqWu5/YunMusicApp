<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yunmusicapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_cloud_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YunMusicApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                /
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayVideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".MusicCommentActivity" />
        <activity android:name=".SingerDetailActivity" />
        <activity android:name=".TopArtistsActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".PlayMusicActivity" />
        <activity android:name=".UserCloudActivity" />
        <activity android:name=".ClickUserInfoActivity" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".FansFollowedActivity" />
        <activity android:name=".PlayListDetailActivity" />
        <activity android:name=".UserInfoActivity" />
        <activity android:name=".LoginActivity">

        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>