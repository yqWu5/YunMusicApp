<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/calendar_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="今天"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendar_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="云村热点"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_day"
        app:layout_constraintStart_toEndOf="@+id/calendar_day"
        app:layout_constraintTop_toTopOf="@+id/calendar_day" />

    <TextView
        android:ellipsize="end"
        android:maxLength="20"
        android:id="@+id/calendar_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="那些将错就错的神曲 | 新闻室"
        app:layout_constraintStart_toStartOf="@+id/calendar_day"
        app:layout_constraintTop_toBottomOf="@+id/calendar_day" />

    <ImageView
        android:id="@+id/calendar_Img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/calendar_Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/calendar_tag"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendar_Img" />
</androidx.constraintlayout.widget.ConstraintLayout>