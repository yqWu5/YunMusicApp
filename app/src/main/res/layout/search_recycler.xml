<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Search_Recycler_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Search_Recycler_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Too Bad"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/Search_Recycler_Num"
        app:layout_constraintStart_toEndOf="@+id/Search_Recycler_Num"
        app:layout_constraintTop_toTopOf="@+id/Search_Recycler_Num" />

    <ImageView
        android:id="@+id/Search_Recycler_Signal"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/Search_Recycler_Title"
        app:layout_constraintStart_toEndOf="@+id/Search_Recycler_Title"
        app:layout_constraintTop_toTopOf="@+id/Search_Recycler_Title" />
</androidx.constraintlayout.widget.ConstraintLayout>